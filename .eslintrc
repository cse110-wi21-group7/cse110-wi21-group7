{
  "root": true,

  "plugins": ["prettier"],

  "extends": ["eslint:recommended", "prettier", "plugin:jest/recommended"],

  "rules": {
    "no-console": 1, // Means warning
    "prettier/prettier": 2 // Means error
  },

  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },

  "env": {
    "jest/globals": true,
    "browser": true,
    "es2021": true,
    "node": true,
    "es6": true
    // "jest": true,
  },

  "ignorePatterns": ["docs/", "node_modules/"]
}
